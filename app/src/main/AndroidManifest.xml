<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.super_yu.myexample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".json.Json2Activity" />
        <activity android:name=".notification.Notification2Activity"></activity>

        <activity android:name="com.example.super_yu.myexample.notification.SimpleNotificationActivity" />
        <activity android:name="com.example.super_yu.myexample.notification.NotificationPriorityActivity" />
        <activity android:name="com.example.super_yu.myexample.notification.TaskStackBuilderActivity" />
        <!-- parentActivityName 属性用于点击 Notification 跳转到 Activity 按返回键时返回的界面 -->
        <activity
            android:name="com.example.super_yu.myexample.notification.result.NormalResultActivity"
            android:parentActivityName=".notification.Notification2Activity">

            <!-- 兼容 Android 4.0.3 及更早的版本 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".notification.Notification2Activity" />
        </activity>
        <!-- <activity android:name=".ResultActivity"></activity> -->
        <activity
            android:name="com.example.super_yu.myexample.notification.result.SpecailResultActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="" />
        <activity android:name="com.example.super_yu.myexample.notification.ProgressNotifyActivity" />
        <activity android:name="com.example.super_yu.myexample.notification.NotificationEffectActivity" />
        <activity android:name="com.example.super_yu.myexample.notification.SimplestNotificationActivity" />
        <activity android:name="com.example.super_yu.myexample.notification.NotificationStyleActivity" />
        <activity android:name="com.example.super_yu.myexample.notification.NotificationListenerServiceActivity"></activity>

        <service
            android:name="com.example.super_yu.myexample.notification.MyNotificationListenerService"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>